<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <activeProfiles>
    <activeProfile>redhat-ga-repo</activeProfile>
    <activeProfile>vulas</activeProfile>
  </activeProfiles>
  <pluginGroups/>
  <proxies/>
  <servers/>
  <mirrors>
    <mirror>
      <id>thunder.maven.central.cache</id>
      <mirrorOf>central</mirrorOf>
      <name>Thunder Maven Central Cache</name>
      <url>https://{{ ansible_nodename }}/maven</url>
    </mirror>
    <mirror>
      <id>thunder.spring.io</id>
      <mirrorOf>repository.spring.maven.libs</mirrorOf>
      <name>Thunder Spring IO Cache</name>
      <url>https://{{ ansible_nodename }}/spring</url>
    </mirror>
    <mirror>
      <id>thunder.brew.cache.eap73</id>
      <mirrorOf>jboss-eap-7.3-product-repository</mirrorOf>
      <name>Thunder Product EAP 7.3 Cache</name>
      <url>https://{{ ansible_nodename }}/eap-7.3</url>
    </mirror>
    <mirror>
      <id>thunder.brew.cache.eap72</id>
      <mirrorOf>jboss-eap-7.2-product-repository</mirrorOf>
      <name>Thunder Product EAP 7.2 Cache</name>
      <url>https://{{ ansible_nodename }}/eap-7.2</url>
    </mirror>
    <mirror>
      <id>thunder.brew.cache.eap71</id>
      <mirrorOf>jboss-eap-7.1-product-repository</mirrorOf>
      <name>Thunder Product EAP 7.1 Cache</name>
      <url>https://{{ ansible_nodename }}/eap-7.1</url>
    </mirror>
    <mirror>
      <id>thunder.brew.cache.eap70</id>
      <mirrorOf>jboss-product-repository</mirrorOf>
      <name>Thunder Product EAP 7.0 Cache</name>
      <url>https://{{ ansible_nodename }}/eap-7.0</url>
    </mirror>
    <mirror>
      <id>thunder.jboss.group.org.cache</id>
      <mirrorOf>jboss-public-repository-group</mirrorOf>
      <name>Thunder JBoss Public Repositories Cache</name>
      <url>https://{{ ansible_nodename }}/jboss</url>
    </mirror>
    <mirror>
      <id>thunder.jboss.org.cache</id>
      <mirrorOf>jboss-public-repository</mirrorOf>
      <name>Thunder JBoss Public Repositories Cache</name>
      <url>https://{{ ansible_nodename }}/jboss</url>
    </mirror>
  </mirrors>
  <profiles>
    <profile>
      <id>redhat-ga-repo</id>
      <repositories>
        <repository>
          <id>redhat-ga-repository</id>
          <name>JBoss GA Maven Repository Group</name>
          <url>https://maven.repository.redhat.com/ga/</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>redhat-ha-repository</id>
          <name>JBoss GA Maven Repository Group</name>
          <url>https://maven.repository.redhat.com/ga/</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
    <profile>
      <id>vulas</id>
      <!--activation>
        <property>
           <name>environment.vulas</name>
        </property>
      </activation-->
      <repositories>
        <repository>
          <id>vulas-maven-repo</id>
          <name>Vulas Maven Repo Hack</name>
          <url>https://{{ ansible_nodename }}/vulas/</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>vulas-maven-plugin</id>
          <name>XXX</name>
          <url>https://{{ ansible_nodename }}/vulas/</url>
          <layout>default</layout>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>never</updatePolicy>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
</settings>
